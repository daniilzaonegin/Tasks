@using Questionnarie.Model.Entities
@using System.ComponentModel.DataAnnotations
@model Questionnarie.Models.TaskListViewModel

@{
    ViewBag.Title = "Home";
}

<h2>Home</h2>

<div class="col-xs-2"> 
    We put something usefull here later
</div>

<div class="col-xs-8">
    <table class="table">
        <thead>
            <tr>
                @foreach (var item in typeof(WorkTask).GetMembers())
                {
                    if (item.MemberType == System.Reflection.MemberTypes.Property)
                    {

                        if (item.GetCustomAttributes(typeof(DisplayAttribute), false).Length > 0)
                        {
                            <th>
                                @(((DisplayAttribute)item.GetCustomAttributes(typeof(DisplayAttribute), false)[0]).Name)
                            </th>
                        }
                        else
                        {
                            <th>
                                @item.Name
                            </th>
                        }
                    }
                }
            </tr>
        </thead>
        <tbody>

        </tbody>
    </table>
</div>